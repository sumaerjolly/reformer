  <% if @user.errors.any? %>
    <h4>
      <%= pluralize(@user.errors.count, "error") %> 
    </h4>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg%></li>
      <% end %>
    </ul>
  <% end %>
</div>
<%= form_for(@user) do |f| %>
  <%= f.label "Username:" %>
  <%= f.text_field :username%><br>
  <%= f.label "Email:" %>
  <%= f.text_field :email %><br>
  <%= f.label "Password:" %>
  <%= f.password_field :password %>
  <%= f.submit %>
<% end %>